@model Alpha.Models.User

@{
    ViewData["Title"] = "Remove";
}

<h2>
    <a asp-action="Details" asp-route-id="@Model.Id">User "@Model.Name"</a>
</h2>

<div class="row">
    <div class="col-xs-12 header">
        <a asp-action="Index">&larr;&nbsp;Back to users</a>
        &nbsp;|&nbsp;
        <a asp-action="Edit" asp-route-id="@Model.Id">&nbsp;&#10003;&nbsp;Edit</a>
        &nbsp;|&nbsp;
        &nbsp;x&nbsp;Remove
    </div>
</div>


<div class="row">
    <div class="col-xs-12">
        <h4>Are you sure you want to remove user "@Model.Name"?</h4>
        <br/>
        <form asp-action="Remove">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Remove user" class="btn btn-danger" />
        </form>

    </div>
</div>
