@model Alpha.Models.Room

@{
    ViewData["Title"] = "Add";
}

<h2>
    Add new room
</h2>

<a asp-action="Index">
    <div class="row">
        <div class="col-xs-12">
            <nowrap><strong><a asp-action="Index">&larr; Back to rooms</a></strong></nowrap>
        </div>
    </div>
</a>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seats" class="control-label"></label>
                <input asp-for="Seats" class="form-control" />
                <span asp-validation-for="Seats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Projector" /> @Html.DisplayNameFor(model => model.Projector)
                    </label>
                    <br /><br />
                    <label>
                        <input asp-for="Board" /> @Html.DisplayNameFor(model => model.Board)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Descrtiption" class="control-label"></label>
                <textarea asp-for="Descrtiption" class="form-control"></textarea>
                <span asp-validation-for="Descrtiption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add room" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
