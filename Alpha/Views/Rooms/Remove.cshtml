@model Alpha.Models.Room

@{
    ViewData["Title"] = "Delete";
}

<h2>
    <a asp-action="Details" asp-route-id="@Model.Id">
        @Html.DisplayFor(model => model.Name)
     </a>
</h2>

    <div class="row">
        <div class="col-xs-12 header">
            <a asp-action="Index">&larr;&nbsp;Back to rooms</a>
            &nbsp;|&nbsp;
            <a asp-action="Edit" asp-route-id="@Model.Id">&#10003;&nbsp;Edit</a>
            &nbsp;|&nbsp;
            x&nbsp;Remove
        </div>
    </div>

<div class="row">
    <div class="col-xs-12">
        <h4>Are you sure you want to remove "@Model.Name"?</h4>
        <br />
        <form asp-action="Remove">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Remove room" class="btn btn-danger" />
        </form>
    </div>
</div>
